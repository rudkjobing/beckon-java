# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Account routes
POST        /account/signIn        controllers.AccountController.signIn()
POST        /account/signUp        controllers.AccountController.signUp()
POST        /account/check         controllers.AccountController.check()

# Beckon routes
GET         /beckons               controllers.BeckonController.getAll()
POST        /beckon                controllers.BeckonController.add()

# User routes
POST        /users/search          controllers.UserController.search()

# Friendship routes
GET         /friendships           controllers.FriendshipController.getAll()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)

