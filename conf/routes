# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Account routes
POST        /account/signIn             controllers.AccountController.signIn()
POST        /account/signUp             controllers.AccountController.signUp()

# Beckon routes
GET         /beckons                    controllers.BeckonController.getAll()
POST        /beckon                     controllers.BeckonController.add()
GET         /beckons/all                controllers.BeckonController.getEverything()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)

